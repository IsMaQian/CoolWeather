<?xml version="1.0" encoding="utf-8"?>
<com.example.view.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:id="@+id/sildingFinishLayoutwork"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:background="#686868"> 
            <RelativeLayout
            android:id="@+id/RelativeLayoutwork0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp" >

            <TextView
                android:id="@+id/textViewledset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="作业参数"
                android:textColor="#f1f1f1"
                android:textSize="20sp" />
        </RelativeLayout>
  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/RelativeLayoutwork0"
    android:orientation="vertical" >
    <EditText
        android:id="@+id/editText1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignTop="@+id/textViewworkspeed"
        android:background="@drawable/shape"
        android:gravity="center"
        android:hint="1--8米/秒"
        android:ems="10"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewworkrange"
        android:layout_toRightOf="@+id/textViewworkrange"
        android:layout_alignLeft="@id/editText3"
        android:background="@drawable/shape"
        android:gravity="center"
        android:ems="10"/>
    <EditText
        android:id="@id/editText3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewworkhight"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:gravity="center"
        android:hint="1--300米"
        android:ems="10"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/editText3"
        android:layout_below="@id/textViewworkspeed"
        android:layout_marginTop="57dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="0.5--100米"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignTop="@id/editText1"
        android:textColor="#f1f1f1"
        android:textSize="14sp"
        android:text="m/s" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editText4"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/editText4"
        android:textColor="#f1f1f1"
        android:textSize="14sp"
        android:text="m" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView2"
        android:layout_alignTop="@id/editText3"
        android:textColor="#f1f1f1"
        android:textSize="14sp"
        android:text="m" />

 <LinearLayout
     android:id="@+id/Linear01"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="15dp"
     android:orientation="horizontal" >

     <Button
         android:id="@+id/buttongetindex"
         android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="45dp"
         android:background="@drawable/selector"
         android:text="参数获取"
         android:textColor="#f1f1f1"
         android:textSize="14sp" />

        <Button
            android:id="@+id/buttonsetindex"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:background="@drawable/selector"
            android:text="参数设置"
            android:textColor="#f1f1f1"
            android:textSize="14sp" />

    </LinearLayout>

 <TextView
     android:id="@id/textViewworkhight"
     android:layout_width="wrap_content"
     android:layout_height="60dp"
     android:layout_alignLeft="@id/textViewworkrange"
     android:layout_alignTop="@id/editText4"
     android:text="作业高度："
     android:textColor="#f1f1f1"
     android:textSize="14sp" />

 <TextView
     android:id="@+id/textViewworkdistance"
     android:layout_width="wrap_content"
     android:layout_height="60dp"
     android:layout_alignBaseline="@id/editText3"
     android:layout_alignBottom="@id/editText3"
     android:layout_alignLeft="@id/textViewworkhight"
     android:text="作业距离：    "
     android:textColor="#f1f1f1"
     android:textSize="14sp" />

 <TextView
     android:id="@id/textViewworkspeed"
     android:layout_width="wrap_content"
     android:layout_height="60dp"
     android:layout_above="@id/editText2"
     android:layout_toLeftOf="@id/editText1"
     android:text="作业速度：    "
     android:textColor="#f1f1f1"
     android:textSize="14sp" />

 <TextView
     android:id="@id/textViewworkrange"
     android:layout_width="wrap_content"
     android:layout_height="60dp"
     android:layout_alignLeft="@id/textViewworkspeed"
     android:layout_alignParentTop="true"
     android:layout_marginTop="80dp"
     android:text="喷洒幅度："
     android:textColor="#f1f1f1"
     android:textSize="14sp" />

 <CheckBox
     android:id="@+id/checkBoxgaodu"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBaseline="@+id/textView2"
     android:layout_alignBottom="@+id/textView2"
     android:layout_toRightOf="@+id/textView2"
     android:text="启用"
     android:textSize="14sp"
     android:textColor="#f1f1f1" />

 <CheckBox
     android:id="@+id/checkBoxjuli"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBaseline="@+id/textView3"
     android:layout_alignBottom="@+id/textView3"
     android:layout_alignLeft="@+id/checkBoxgaodu"
     android:text="启用"
     android:textSize="14sp"
     android:textColor="#f1f1f1" />

 <TextView
     android:id="@id/textView4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignTop="@+id/editText2"
     android:layout_toLeftOf="@+id/checkBoxgaodu"
     android:text="m"
     android:textColor="#f1f1f1"
     android:textSize="14sp" />

 <!-- <ImageView
     android:id="@+id/animationwork"
     android:layout_width="wrap_content"
     android:layout_height="60dp"
     android:layout_above="@+id/textView2"
     android:layout_centerHorizontal="true"
     android:contentDescription="wait"
     android:padding="5dp"
     android:src="@drawable/imgloading" /> -->

</RelativeLayout>
</com.example.view.SildingFinishLayout>

