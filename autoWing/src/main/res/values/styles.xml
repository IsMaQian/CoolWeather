<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
	</style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
	<style name="Base.AppTheme" parent="Base.AppTheme">
	    <item name="@color/colorPrimary">#3F51B5</item>
        <item name="@color/colorPrimaryDark">#303F9F</item>
        <item name="@color/colorAccent">#FF4081</item>
	</style>
	
	<style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
       <!-- <item name="android:windowBackground">@color/alpha_bg</item>背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    
	<style name="PopupAnimation" parent="android:Animation">
		<!--  item name="android:windowEnterAnimation">@anim/popup_enter</item-->
		<!--item name="android:windowExitAnimation">@anim/popup_exit</item!-->
	</style>
	<style name="spinnerstyle">
